{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:DeleteObject",
        "s3:ListBucket"
      ],
      "Resource": [
        "arn:aws:s3:::kafka-realtime-crypto-bronze/*",
        "arn:aws:s3:::kafka-realtime-crypto-bronze",
        "arn:aws:s3:::kafka-realtime-crypto-silver/*",
        "arn:aws:s3:::kafka-realtime-crypto-silver",
        "arn:aws:s3:::kafka-realtime-crypto-gold/*",
        "arn:aws:s3:::kafka-realtime-crypto-gold",
        "arn:aws:s3:::kafka-realtime-crypto-glue/*",
        "arn:aws:s3:::kafka-realtime-crypto-glue"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "logs:CreateLogGroup",
        "logs:CreateLogStream",
        "logs:PutLogEvents"
      ],
      "Resource": "*"
    },
    {
      "Effect": "Allow",
      "Action": [
        "glue:StartJobRun",
        "glue:GetJob",
        "glue:GetJobRun",
        "glue:GetJobRuns"
      ],
      "Resource": [
        "arn:aws:glue:YOUR_REGION:YOUR_ACCOUNT_ID:job/YOUR_BRONZE_TO_SILVER_JOB",
        "arn:aws:glue:YOUR_REGION:YOUR_ACCOUNT_ID:job/YOUR_SILVER_TO_GOLD_JOB"
      ]
    }
  ]
}
